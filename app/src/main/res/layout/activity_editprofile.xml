<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kannaphat.smartpiidispenser.editprofileActivity">

    <TextView
        android:text="Nickname :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        android:layout_alignStart="@+id/text_name"
        android:layout_marginTop="25dp"
        android:id="@+id/text_nickname" />

    <TextView
        android:text="Hospital : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/text_disease"
        android:layout_alignLeft="@+id/text_disease"
        android:layout_alignStart="@+id/text_disease"
        android:layout_marginTop="25dp"
        android:id="@+id/text_hospital" />

    <TextView
        android:text="Edit Profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/text_profile"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="85dp"
        android:id="@+id/text_name" />

    <TextView
        android:text="Age : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:id="@+id/text_age"
        android:layout_below="@+id/text_nickname" />

    <TextView
        android:text="Congentital\ndisease :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        android:id="@+id/text_disease"
        android:layout_below="@+id/text_age"
        android:layout_alignLeft="@+id/text_age"
        android:layout_alignStart="@+id/text_age" />

    <EditText
        android:text=""
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/etext_showname"
        android:layout_alignBaseline="@+id/text_name"
        android:layout_alignBottom="@+id/text_name"
        android:layout_toEndOf="@+id/text_name"
        android:layout_toRightOf="@+id/text_name" />

    <EditText
        android:text=""
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/etext_shownickname"
        android:layout_alignBaseline="@+id/text_nickname"
        android:layout_alignBottom="@+id/text_nickname"
        android:layout_toRightOf="@+id/text_disease"
        android:layout_toEndOf="@+id/text_disease" />

    <EditText
        android:text=""
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="number"
        android:id="@+id/etext_showage"
        android:layout_alignBaseline="@+id/text_age"
        android:layout_alignBottom="@+id/text_age"
        android:layout_toRightOf="@+id/text_age"
        android:layout_toEndOf="@+id/text_age" />

    <EditText
        android:text=""
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/etext_showdisease"
        android:layout_alignBottom="@+id/text_disease"
        android:layout_toRightOf="@+id/text_disease"
        android:layout_toEndOf="@+id/text_disease"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <EditText
        android:text=""
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/etext_showhospital"
        android:layout_alignBaseline="@+id/text_hospital"
        android:layout_alignBottom="@+id/text_hospital"
        android:layout_toRightOf="@+id/text_nickname"
        android:layout_toEndOf="@+id/text_nickname" />

    <Button
        android:text="save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/text_profile"
        android:layout_toEndOf="@+id/text_profile"
        android:layout_marginBottom="39dp"
        android:id="@+id/btn_editpro" />
</RelativeLayout>
