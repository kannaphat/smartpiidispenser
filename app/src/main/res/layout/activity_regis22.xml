<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_regis22"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kannaphat.smartpiidispenser.regis22Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_uid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:text="DATA PILL2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_datapill"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/pleaesinput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/text_please"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_uid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/text_Namepill"
        android:layout_below="@+id/text_please"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Period :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_period"
        android:textSize="20sp"
        android:layout_alignTop="@+id/text_qua"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/text_please"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ET_namepill2" />

    <TextView
        android:text="Number :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/text_number"
        android:layout_alignTop="@id/text_Namepill"
        android:layout_alignLeft="@+id/text_Namepill"
        android:layout_alignStart="@+id/text_Namepill"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="Quanity : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/text_qua"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/text_number"
        android:layout_alignLeft="@+id/text_Namepill"
        android:layout_alignStart="@+id/text_Namepill" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ET_num2"
        android:layout_alignBaseline="@+id/text_number"
        android:layout_alignBottom="@+id/text_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ET_qua2"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/text_qua"
        android:layout_alignBottom="@+id/text_qua"/>

    <CheckBox
        android:text="After"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_after2"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/chb_before2"
        android:layout_alignBottom="@+id/chb_before2"
        android:layout_toRightOf="@+id/text_datapill"
        android:layout_toEndOf="@+id/text_datapill" />

    <CheckBox
        android:text="Before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_before2"
        android:textSize="17dp"
        android:layout_alignTop="@+id/text_period"
        android:layout_toRightOf="@+id/chb_breakfast2"
        android:layout_toEndOf="@+id/chb_breakfast2" />

    <CheckBox
        android:text="Lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_lunch2"
        android:textSize="17dp"
        android:layout_marginTop="280dp"
        android:layout_below="@+id/tv_uid"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_dinner2"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/chb_lunch2"
        android:layout_alignBottom="@+id/chb_lunch2"
        android:layout_alignLeft="@+id/chb_after2"
        android:layout_alignStart="@+id/chb_after2" />

    <CheckBox
        android:text="Night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_night2"
        android:textSize="17dp"
        android:layout_below="@+id/chb_breakfast2"
        android:layout_alignLeft="@+id/chb_breakfast2"
        android:layout_alignStart="@+id/chb_breakfast2"
        android:layout_marginTop="17dp" />

    <CheckBox
        android:text="Breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_breakfast2"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/chb_lunch2"
        android:layout_alignBottom="@+id/chb_lunch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_savepill2" />

    <CheckBox
        android:text="Don't have pill more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_don2"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/btn_savepill2"
        android:layout_alignBottom="@+id/btn_savepill2"
        android:layout_alignLeft="@+id/chb_night2"
        android:layout_alignStart="@+id/chb_night2" />

</RelativeLayout>
