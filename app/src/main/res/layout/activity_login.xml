<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kannaphat.smartpiidispenser.LoginActivity">


    <Button
        android:text="Logout"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/btn_logout"
        android:layout_below="@+id/btn_qr"
        android:layout_alignLeft="@+id/btn_history"
        android:layout_alignStart="@+id/btn_history"
        android:gravity="center"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Data pill"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:id="@+id/btn_pil"
        android:gravity="center"
        android:layout_below="@+id/btn_profile"
        android:layout_centerHorizontal="true" />


    <Button
        android:text="History"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="17dp"
        android:id="@+id/btn_history"
        android:gravity="center"
        android:layout_below="@+id/btn_pil"
        android:layout_centerHorizontal="true" />

    <Button
    android:text="scan QR code"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/btn_qr"
        android:gravity="center"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/btn_history"
        android:layout_alignLeft="@+id/btn_logout"
        android:layout_alignStart="@+id/btn_logout" />

    <Button
        android:text="Profile"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:id="@+id/btn_profile"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tv_uid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Welcome\nsmart pill dispenser"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/text_welcom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="your email :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_uid"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/text_welcom"
        android:layout_alignLeft="@+id/btn_profile"
        android:layout_alignStart="@+id/btn_profile" />

</RelativeLayout>
