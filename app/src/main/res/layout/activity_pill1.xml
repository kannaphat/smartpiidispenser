<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pill1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kannaphat.smartpiidispenser.pill1Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_uid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:text="DATA PILL 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_datapill"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/text_Namepill"
        android:layout_marginTop="80dp" />

    <TextView
        android:text="Period :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_period"
        android:textSize="20sp"
        android:layout_alignTop="@+id/text_qua"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Number :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/text_number"
        android:layout_alignTop="@id/text_Namepill"
        android:layout_alignLeft="@+id/text_Namepill"
        android:layout_alignStart="@+id/text_Namepill"
        android:layout_marginTop="60dp" />

    <TextView
        android:text="Quanity : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/text_qua"
        android:layout_marginTop="60dp"
        android:layout_alignTop="@+id/text_number"
        android:layout_alignLeft="@+id/text_Namepill"
        android:layout_alignStart="@+id/text_Namepill" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ET_shownamepill1"
        android:layout_alignBaseline="@+id/text_Namepill"
        android:layout_alignBottom="@+id/text_Namepill"
        android:layout_toRightOf="@+id/text_number"
        android:layout_alignRight="@+id/chb_dinner2"
        android:layout_alignEnd="@+id/chb_dinner2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ET_shownum1"
        android:layout_alignBaseline="@+id/text_number"
        android:layout_alignBottom="@+id/text_number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/text_datapill"
        android:layout_alignStart="@+id/text_datapill" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/ET_showqua1"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/text_qua"
        android:layout_alignBottom="@+id/text_qua"
        android:layout_alignLeft="@+id/ET_shownum1"
        android:layout_alignStart="@+id/ET_shownum1" />

    <CheckBox
        android:text="After"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_showafter1"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/chb_showbefore1"
        android:layout_alignBottom="@+id/chb_showbefore1"
        android:layout_toRightOf="@+id/text_datapill"
        android:layout_toEndOf="@+id/text_datapill" />

    <CheckBox
        android:text="Before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_showbefore1"
        android:textSize="17dp"
        android:layout_alignTop="@+id/text_period"
        android:layout_toRightOf="@+id/chb_showbreakfast1"
        android:layout_toEndOf="@+id/chb_showbreakfast1" />

    <CheckBox
        android:text="Lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_showlunch1"
        android:textSize="17dp"
        android:layout_marginTop="250dp"
        android:layout_below="@+id/tv_uid"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="Dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_showdinner1"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/chb_showlunch1"
        android:layout_alignBottom="@+id/chb_showlunch1"
        android:layout_alignLeft="@+id/chb_showafter1"
        android:layout_alignStart="@+id/chb_showafter1" />

    <CheckBox
        android:text="Night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_shownight1"
        android:textSize="17dp"
        android:layout_below="@+id/chb_showbreakfast1"
        android:layout_alignLeft="@+id/chb_showbreakfast1"
        android:layout_alignStart="@+id/chb_showbreakfast1"
        android:layout_marginTop="17dp" />

    <CheckBox
        android:text="Breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chb_showbreakfast1"
        android:textSize="17dp"
        android:layout_alignBaseline="@+id/chb_showlunch1"
        android:layout_alignBottom="@+id/chb_showlunch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:id="@+id/mbtn_editpill1"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/chb_showdinner1"
        android:layout_alignEnd="@+id/chb_showdinner1" />

    <!--<Button-->
        <!--android:text="Save"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/btn_editpill1"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_marginBottom="12dp" />-->

</RelativeLayout>
